# --- CONFIGURAÇÕES DE CONEXÃO ---
REMOTE_EC2_USER="ubuntu"
REMOTE_EC2_IP="IP_DA_SUA_EC2"
LOCAL_BACKUP_USER="backup"
REPO_PATH="/borg/repo"

# --- SEGURANÇA (BORG) ---
# Defina uma senha forte aqui para automação Zero Touch
export BORG_PASSPHRASE="SUA_SENHA_MESTRA_AQUI"

# --- DIRETÓRIOS PARA BACKUP ---
# Pastas na EC2 que serão copiadas
TARGET_DIRECTORIES="/etc /var/www /home/ubuntu/borg_test_data"

# --- NOTIFICAÇÕES (OPCIONAL) ---
WEBHOOK_URL="" # URL do Discord ou Slack
